{
  "name": "frontmatter-lint",
  "version": "0.1.0",
  "description": "Lint Markdown frontmatter against TypeScript types or Zod schemas",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "fmlint": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "tsc --noEmit",
    "fmlint": "node dist/cli.js",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "frontmatter",
    "markdown",
    "lint",
    "typescript",
    "zod",
    "json-schema",
    "yaml",
    "toml",
    "validation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "zod": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
